<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/walls59"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="vyom.com.tracker.Profile">

    <ImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:background="@drawable/user4"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp"
        android:id="@+id/im_already"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="User name"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_user"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="25dp"
        android:layout_alignBottom="@+id/im_already"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="40sp"
        android:layout_height="40sp"
        app:srcCompat="@drawable/phonecall"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/tv_phn"
        android:layout_alignLeft="@+id/im_already"
        android:layout_alignStart="@+id/im_already" />

    <TextView
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_phn"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/tv_user"
        android:layout_alignLeft="@+id/tv_user"
        android:layout_alignStart="@+id/tv_user" />

    <ImageView
        android:layout_width="40sp"
        android:layout_height="40sp"
        app:srcCompat="@drawable/mailing"
        android:id="@+id/imageView3"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <TextView
        android:text="TextView"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignRight="@+id/tv_phn"
        android:layout_alignEnd="@+id/tv_phn"
        android:id="@+id/tv_email" />

    <ImageView
        android:layout_width="40sp"
        android:layout_height="40sp"
        app:srcCompat="@drawable/wifisignal"
        android:id="@+id/imageView4"
        android:layout_alignBottom="@+id/tv_sos"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3" />

    <TextView
        android:text="TextView"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sos"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/tv_email"
        android:layout_toLeftOf="@+id/btn_maps"
        android:layout_toStartOf="@+id/btn_maps" />

    <ImageButton
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:background="@drawable/placeholder"
        android:id="@+id/btn_maps"
        android:layout_alignTop="@+id/btn_contact"
        android:layout_alignRight="@+id/tv_user"
        android:layout_alignEnd="@+id/tv_user" />

    <ImageButton
        android:background="@drawable/contactus"
        android:id="@+id/btn_contact"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_alignLeft="@+id/tv_sos"
        android:layout_alignStart="@+id/tv_sos" />

    <ImageButton
        android:layout_width="40sp"
        android:background="@drawable/settings"
        android:id="@+id/imageButton4"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_marginBottom="41dp" />

    <ImageButton
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:background="@drawable/home"
        android:id="@+id/btn_home"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_toLeftOf="@+id/imageView4"
        android:layout_toStartOf="@+id/imageView4" />
</RelativeLayout>
